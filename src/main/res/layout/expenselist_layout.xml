<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:elevation="10dp"
    app:cardElevation="10dp"
    android:layout_margin="10dp"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/expenselistlayout_LinearLayout"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/expenselistlayout_item_TextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/kaleko_bold"
                android:text="Kategoria"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/expenselistlayout_amount_TextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:fontFamily="@font/kaleko_bold"
                android:text="Kwota"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/expenselistlayout_note_TextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:fontFamily="@font/kaleko_bold"
                android:text="Opis"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/expenselistlayout_date_TextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:fontFamily="@font/kaleko_bold"
                android:text="Data"
                android:textColor="@color/black"
                android:textSize="18sp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/expenselistlayout_imageView"
            android:layout_width="54dp"
            android:layout_height="61dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:layout_toEndOf="@+id/expenselistlayout_LinearLayout"
            android:src="@drawable/home">

        </ImageView>
    </RelativeLayout>

</androidx.cardview.widget.CardView>